@page
@using NuGet.Protocol
@model Badminton.RazorWebApp.Pages.CourtDetailPage.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>CourtDetail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CourtDetail.Court.Name" class="control-label">Court Name</label>
                <select asp-for="CourtDetail.CourtId" class="form-control">
                    @foreach (var item in Model.Courts)
                    {
                    <option value="@item.CourtId"> @item.Name</option>
                    }
                </select>
                <span asp-validation-for="CourtDetail.Slot" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourtDetail.Slot" class="control-label"></label>
                <select asp-for="CourtDetail.Slot" class="form-control">
                    @foreach (var item in Model.Slot)
                    {
                        <option value="@item"> @item</option>
                    }
                </select>                
                <span asp-validation-for="CourtDetail.Slot" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourtDetail.Price" class="control-label"></label>
                <input asp-for="CourtDetail.Price" class="form-control" />
                <span asp-validation-for="CourtDetail.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourtDetail.Status" class="control-label"></label>
                <select asp-for="CourtDetail.Status" class="form-control">
                    @foreach (var item in Model.Status)
                    {
                    <option value="@item">@item</option>
                    }
                </select>
                <span asp-validation-for="CourtDetail.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourtDetail.Notes" class="control-label"></label>
                <input asp-for="CourtDetail.Notes" class="form-control" />
                <span asp-validation-for="CourtDetail.Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourtDetail.Capacity" class="control-label"></label>
                <input asp-for="CourtDetail.Capacity" class="form-control" />
                <span asp-validation-for="CourtDetail.Capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

