@page
@model Badminton.RazorWebApp.Pages.CourtPage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Court</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Court.CourtId" />
            <div class="form-group">
                <label asp-for="Court.Name" class="control-label"></label>
                <input asp-for="Court.Name" class="form-control" />
                <span asp-validation-for="Court.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Court.Status" class="control-label"></label>
                <select asp-for="Court.Status" class="form-control">
                    @foreach (var item in Model.Status) {
                        <option value="@item">@item</option>
                    }
                </select>
                <span asp-validation-for="Court.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Court.Description" class="control-label"></label>
                <input asp-for="Court.Description" class="form-control" />
                <span asp-validation-for="Court.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Court.Price" class="control-label"></label>
                <input asp-for="Court.Price" class="form-control" />
                <span asp-validation-for="Court.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
