@page
@model Badminton.RazorWebApp.Pages.CustomerPage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<form>
    <input type="hidden" name="newCurPage" value="1" />
    <input name="searchKey" value="@Model.Search" />
    <input type="submit" value="Search">
</form>
<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CustomerList[0].Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerList[0].Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerList[0].Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerList[0].Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerList[0].DateOfBirth)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.CustomerList) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.CustomerId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.CustomerId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.CustomerId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<div class="d-flex justify-content-between">
    <form method="get" class="form-inline">
        <input type="hidden" name="newCurPage" value="@(Model.CurrentPage - 1)" />
        <input type="hidden" name="searchKey" value="@Model.Search" />
        <button type="submit" class="btn btn-outline-primary" @(Model.CurrentPage <= 1 ? "disabled" : "")>Previous</button>
    </form>

    <span>Page @Model.CurrentPage of @Model.TotalPages</span>

    <form method="get" class="form-inline">
        <input type="hidden" name="newCurPage" value="@(Model.CurrentPage + 1)" />
        <input type="hidden" name="searchKey" value="@Model.Search" />
        <button type="submit" class="btn btn-outline-primary" @(Model.CurrentPage >= Model.TotalPages ? "disabled" : "")>Next</button>
    </form>
</div>
