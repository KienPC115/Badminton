<Window x:Class="Badminton.WpfApp.UI.wCourtDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Badminton.WpfApp.UI"
        mc:Ignorable="d"
        Title="wCourtDetail" Height="450" Width="863">
    <Grid>
        <StackPanel Orientation="Vertical">
            <GroupBox Header="Court Detail Form" Margin="10">
                <Grid Height="80">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Grid.Row="0" Content="ID" HorizontalAlignment="Left" VerticalContentAlignment="Center" />
                    <TextBox Grid.Column="1" Grid.Row="0" x:Name="txtCourtDetailId" Height="25" Text="{Binding Path=CourtDetail.CourtDetailId, Mode=TwoWay}" IsEnabled="False" Margin="5"  Width="180" HorizontalAlignment="Left"/>

                    <Label Grid.Column="2" Grid.Row="0" Content="Court Name" HorizontalAlignment="Left" VerticalContentAlignment="Center" />
                    <ComboBox 
                              Grid.Column="3" 
                              Grid.Row="0" 
                              x:Name="ComboBoxCourtName" 
                              MinWidth="180" 
                              Margin="5,5,0,5"
                              HorizontalAlignment="Left" 
                              VerticalContentAlignment="Center"
                              DisplayMemberPath="Name"
                              ></ComboBox>

                    <Label Grid.Column="4" Grid.Row="0" Content="Slot" HorizontalAlignment="Left" VerticalContentAlignment="Center" />
                    <ComboBox 
                               Grid.Column="5" 
                               Grid.Row="0" 
                               x:Name="ComboBoxSlot" 
                               MinWidth="180" 
                               Margin="5,5,0,5"
                               HorizontalAlignment="Left" 
                               VerticalContentAlignment="Center"
                               ></ComboBox>         

                    <Label Grid.Column="2" Grid.Row="1" Content="Status" HorizontalAlignment="Left" VerticalContentAlignment="Center" />
                    <ComboBox 
                            Grid.Column="3" 
                            Grid.Row="1" 
                            x:Name="ComboBoxStatus" 
                            MinWidth="180" 
                            Margin="5,5,0,5"
                            HorizontalAlignment="Left" 
                            VerticalContentAlignment="Center"
                            ></ComboBox>
                    
                    <Label Grid.Column="0" Grid.Row="1" Content="Price" HorizontalAlignment="Left" VerticalContentAlignment="Center" />
                    <TextBox Grid.Column="1" Grid.Row="1" x:Name="txtCourtPrice" Height="25" Text="{Binding Path=CourtDetail.Price, Mode=TwoWay}" Margin="5" Width="180" HorizontalAlignment="Left"/>

                </Grid>
                
                
            </GroupBox>
            <StackPanel Height="40" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="ButtonSave" Content="Save" Height="30" Width="80" Click="ButtonSave_Click"/>
                <Button x:Name="ButtonCancel" Content="Cancel" Height="30" Width="80" Click="ButtonCancel_Click"/>
            </StackPanel>
            <StackPanel Height="210">
                <DataGrid x:Name="grdCourtDetail" AutoGenerateColumns="False" ItemsSource="{Binding CourtDetails}" CanUserAddRows="False" Height="200" Margin="10" MouseDoubleClick="grdCourtDetail_MouseDouble_Click" SelectionMode="Single" SelectionUnit="FullRow">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Id" Binding="{Binding Path=CourtDetailId}" Visibility="Visible"/>
                        <DataGridTextColumn Header="Court Name" Binding="{Binding Path=Court.Name}"  Visibility="Visible" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Slot" Binding="{Binding Path=Slot}" Width="100" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Price" Binding="{Binding Path=Price}" Width="100" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Path=Status}" Width="100" IsReadOnly="True"/>
                        <DataGridTemplateColumn Width="50">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="X" x:Name="ButtonDelete" CommandParameter="{Binding Path=CourtDetailId}" Click="grdCourt_ButtonDelete_Click"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
